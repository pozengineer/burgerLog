<div class='burgerImg col-md-4 offset-md-4'>
    <img src="burger.png" alt="codingImage" class="img-fluid"/>
</div>

<h1>Eat-Da-Burger!</h1>


<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <h2>Burgers that have been purchased!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devour}}
                    {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    
    <div class="col-sm-12 col-md-6 col-lg-6">
        <h2>Burgers that have been devoured!</h2>
        <ul>
            {{#each burgers}}
                {{#if devour}}
                    <li>
                        {{id}}.
                        {{burgerName}}
                        <button data-id="{{this.id}}" class="delBurger">Digest!</button>
                        <br>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class='row'>
    <div class="col-sm-12 col-md-4 offset-md-4 createBurger">
        <h2>Add a burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burgerName">
            </div>

            <button type="submit">Purchase Burger</button>
        </form>
    </div>   
</div>